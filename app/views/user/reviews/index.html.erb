<div class="container">

  <div class="row my-4">
    <div class="mx-auto">
      <h3><strong><%= @category %></strong></h3>
    </div>
  </div>
<hr>
  <div class="row mt-4">
    <% @reviews.each do |review| %>
    <div style="margin-right: 10px; margin-bottom: 10px;">
      <div class="custom-img">
        <%= link_to review_path(review.id) do %>
        <%= image_tag review.get_review_image(400,400) %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="row my-3">
    <div class="mx-auto">
      <%= paginate @reviews %>
    </div>
  </div>

</div>