<div class="container">

  <div class="row my-5">
    <div class="mx-auto">
      <h3><strong>Profile edit</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= render 'layouts/errors', obj: @user %>
    </div>
  </div>

  <%= form_with model:@user, local:true do |f| %>
  <div class="row">
    <div class="mx-auto">
      <div class="form-group">
        <%= f.label :user_name, "Account name"%><br>
        <%= f.text_field :user_name, size: "40" %>
      </div>
      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, size: "40" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新する" %>
      </div>
    </div>
  </div>

  <div class="row my-5">
    <div class="mx-auto">
      <div>
        <%= link_to "退会する", withdraw_user_path, method: :patch, :class => "btn btn-danger ms-3", data: { confirm: "本当に退会しますか？" }  %>
      </div>
    </div>
  </div>
  <% end %>
</div>