<h2>Sign up</h2>
<h4>会員情報登録</h4>

<%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
  <%= render "user/shared/error_messages", resource: @user %>
  <div>
    <%= f.text_field :name, autofocus: true, :placeholder =>"お名前" %>
  </div>
  <div>
    <%= f.text_field :name_kana, :placeholder =>"お名前(フリガナ)" %>
  </div>
  <div>
    <%= f.email_field :email, autocomplete: "email", :placeholder =>"メールアドレス" %>
  </div>
  <div>
    <%= f.password_field :password, autocomplete: "new-password", :placeholder =>"パスワード6文字以上" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder =>"パスワード確認" %>
  </div>
  <div>
    <%= f.text_field :phone_number, :placeholder =>"電話番号" %>
  </div>
  <div>
    <%= f.text_field :post_code, :placeholder =>"郵便番号" %>
  </div>
  <div>
    <%= f.text_field :address, :placeholder =>"住所" %>
  </div>
  <div>
    <%= f.text_field :user_name, :placeholder =>"アカウント名" %>
  </div>

  <div class="actions">
    <%= f.submit "この内容で会員登録する" %>
  </div>
<% end %>

<%= render "user/shared/links" %>
