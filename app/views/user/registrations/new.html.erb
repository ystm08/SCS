<div class="container my-5">

  <div class="row">
    <h3><strong>Sign up</strong></h3>
  </div>
  <div class="row">
    会員情報登録
  </div>

  <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
  <div class="row">
    <div class="mx-auto">
      <%= render "user/shared/error_messages", resource: @user %>
      <div class="mt-4">
        <%= f.text_field :name, autofocus: true, :placeholder =>"お名前", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.text_field :name_kana, :placeholder =>"お名前(フリガナ)", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.email_field :email, autocomplete: "email", :placeholder =>"メールアドレス", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.password_field :password, autocomplete: "new-password", :placeholder =>"パスワード6文字以上", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder =>"パスワード確認", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.text_field :phone_number, :placeholder =>"電話番号", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.text_field :post_code, :placeholder =>"郵便番号", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.text_field :address, :placeholder =>"住所", size: "40" %>
      </div>
      <div class="mt-2">
        <%= f.text_field :user_name, :placeholder =>"アカウント名", size: "40" %>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="mx-auto">
       <div class="mt-2 actions">
          <%= f.submit "この内容で会員登録する", class: "registration-submit" %>
        </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="mx-auto">
      <%= render "user/shared/links" %>
    </div>
  </div>
  <% end %>
</div>