<h2>Member login</h2>
<h4>会員の方</h4>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"メールアドレス" %>
  </div>
  <div>
    <%= f.password_field :password, autocomplete: "current-password", :placeholder =>"パスワード" %>
  </div>
  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>

  <div>
    <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
  </div>

<% end %>
