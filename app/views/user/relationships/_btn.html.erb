<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationships_path(user_id: user), method: :delete, class: "custom-link2" %>
  <% else %>
    <%= link_to "フォローする", relationships_path(user_id: user), method: :post, class: "custom-link" %>
  <% end %>
<% end %>