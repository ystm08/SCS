<div class="container my-5">

  <div class="row">
    <div class="col-3"></div>
    <div class="col-2">
      <h3><strong>Admin login</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-2 text-muted">
      管理者ログイン
    </div>
  </div>

  <div class="row mt-5">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="m-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"メールアドレス", size: "40" %>
        </div>
        <div class="m-3">
          <%= f.password_field :password, autocomplete: "current-password", :placeholder =>"パスワード", size: "40" %>
        </div>
        <div class="m-3">
          <div class="actions">
            <%= f.submit "ログインする", class: "session-submit" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>