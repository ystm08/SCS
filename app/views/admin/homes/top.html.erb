<div class="container">

  <div class="row my-5">
    <div class="mx-auto">
      <h3><strong>注文履歴一覧</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody class="table-borderless">
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%=link_to admin_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
              <% end %>
            </td>
            <td><%= order.user.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= I18n.t("enums.order.status.#{order.status}") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>

</div>