<div class="container">
  <div class="row my-5">
    <h4><strong><%= @user.name %>さんの会員情報</strong></h4>
  </div>

  <div class="row">
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @user.name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @user.post_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <%= form_with model: [:admin, @user], method: :patch do |f| %>
        <td>
          <%= @user.user_status %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効", { value: :false} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "退会", { value: :true} %>
          <%= f.submit "変更する", class: "CartItem-submit" %>
        </td>
        <% end %>
      </tr>
    </table>
  </div>

</div>