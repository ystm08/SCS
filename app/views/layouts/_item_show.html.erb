<!--@item → item-->
<div class="container">

  <div class="row my-5">
    <div class="mx-auto">
      <h3><strong><%= item.name %></strong></h3>
    </div>
    <% if admin_signed_in? %>
    <%= link_to "編集", edit_admin_item_path %>
    <%= link_to "削除", admin_item_path(item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% end %>
  </div>

  <div class="row mb-5">

    <div class="col-6">
      <div class="item-img">
        <div><%= image_tag @item.get_item_image(500,500) %></div>
      </div>
    </div>

    <div class="col-6">
      <div class="row my-5">
        <%= simple_format(item.introduction) %>
      </div>
      <hr>
      <div class="row mb-3">
        カテゴリー:<%= item.category.name %>
      </div>
      <%= form_with model: cart_item do |f| %>
        <div class="row">
          <div class="col-5">
            <h3><strong>¥<%= number_with_delimiter(item.add_tax_price, delimiter: ',') %>(税込)</strong></h3>
          </div>
        <% if user_signed_in? %>
          <div class="col">
            <%= f.hidden_field :item_id, :value => item.id %>
            <%= f.select :amount, *[1..10] %>
          </div>
        </div>
        <div class="row">
          <%= f.submit "カートに入れる", class: "item-submit" %>
        </div>
        <% end %>
      <% end %>
  </div>
</div>