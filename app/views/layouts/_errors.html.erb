<% if obj.errors.any? %>
  <div class="row mt-3">
    <div class="mx-auto">
      <h3><%= obj.errors.count %>件のエラーが発生しました</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="mx-auto">
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>